# Frontend Environment Variables
# Copy this file to .env.local for development
# Copy this file to .env.production for production build

# API Configuration
VITE_API_URL=http://localhost:3000
VITE_API_TIMEOUT=10000

# App Configuration
VITE_APP_NAME=Anti-Procrastination Life Goal Achievement App
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-powered productivity app to overcome procrastination

# Authentication
VITE_JWT_STORAGE_KEY=auth_token
VITE_REFRESH_TOKEN_KEY=refresh_token

# Features
VITE_ENABLE_AI_COACH=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_SOCIAL_FEATURES=false

# External Services (Optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_FIREBASE_CONFIG=

# Development
VITE_DEBUG_MODE=false
VITE_MOCK_API=false
